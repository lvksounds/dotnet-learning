@model Funcionario

<div class="row justify-content-center">
    <div class="col-md-6">
        

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="Cadastrar">
            <h2 class="text-center">Cadastrar novo usuário</h2>
            <div class="mx-auto w-75">
                <div class="form-group">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" asp-action="Cadastrar" class="form-control" />
                </div>

                 <div class="form-group">
                    <label asp-for="Matricula" class="form-label"></label>
                    <input asp-for="Matricula" asp-action="Cadastrar" class="form-control" />
                </div>

                 <div class="form-group">
                    <label asp-for="Setor" class="form-label"></label>
                    <input asp-for="Setor" asp-action="Cadastrar" class="form-control" />
                </div>

                 <div class="form-group">
                    <label asp-for="Cargo" class="form-label"></label>
                    <input asp-for="Cargo" asp-action="Cadastrar" class="form-control" />
                </div>

                <div class="d-flex justify-content-between gap-2 mt-2">
                    <div class="form-group">
                        <button class="btn btn-sm btn-outline-primary" type="submit">Limpar</button>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-sm btn-success" type="submit" value="Cadastrar">
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
