@model MinhaDemoMVC.Models.Filme

@{
    ViewData["Title"] = "Adicionar novo filme";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar" >

            <!--Validation sumary-->
            <!--aps-validation-summary serve para mostrarmos um resumo de todas as validações ativas no formulário-->
            
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            

            <div class="form-group">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control"/>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataLancamento" class="form-label"></label>
                <input asp-for="DataLancamento" class="form-control"/>
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genero" class="form-label"></label>
                <input asp-for="Genero" class="form-control"/>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="form-label"></label>
                <input asp-for="Valor" class="form-control"/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Avaliacao" class="form-label"></label>
                <input asp-for="Avaliacao" class="form-control"/>
                <span class="text-danger" asp-validation-for="Avaliacao"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Adicionar" class="btn btn-outline-info"/>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}